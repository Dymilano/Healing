<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Cổng thông tin đăng ký doanh nghiệp trực tuyến">
    <meta name="author" content="DoanhNghiepPortal">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <title>@ViewData["Title"] - Cổng Thông Tin Doanh Nghiệp</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/assets/css/templatemo-space-dynamic.css">
    <link rel="stylesheet" href="~/assets/css/animated.css">
    <link rel="stylesheet" href="~/assets/css/owl.css">
</head>

<body>
    <!-- ***** Preloader Start ***** -->
    <div id="js-preloader" class="js-preloader">
        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->

    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a href="/" class="logo">
                            <h4>Doanh<span>Nghiep</span></h4>
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">
                            <li class="scroll-to-section"><a href="/" class="active">Trang Chủ</a></li>
                            <li class="scroll-to-section dropdown">
                                <a href="/Home/About" class="dropdown-toggle" id="aboutDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Giới Thiệu</a>
                                <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
                                    <li><a class="dropdown-item" href="/Home/NationalPortal">Cổng thông tin quốc gia về đăng ký doanh nghiệp</a></li>
                                    <li><a class="dropdown-item" href="/Home/PrivateEnterprise">Cục Phát triển doanh nghiệp tư nhân và kinh tế tập thể</a></li>
                                    <li><a class="dropdown-item" href="/Home/InfoCenter">Trung tâm Thông tin doanh nghiệp, kinh tế tập thể, hộ kinh doanh</a></li>
                                    <li><a class="dropdown-item" href="/Home/AgencyOffices">Cơ quan đăng ký kinh doanh các tỉnh, thành phố</a></li>
                                    <li><a class="dropdown-item" href="/Home/Vision">Tầm nhìn - Sứ mệnh - Giá trị</a></li>
                                    <li><a class="dropdown-item" href="/Home/Reform">Cải cách đăng ký kinh doanh</a></li>
                                </ul>
                            </li>
                            <li class="scroll-to-section"><a href="/Services/DangKyDoanhNghiep">Đăng Ký DN</a></li>
                            <li class="scroll-to-section"><a href="/Services/DangKyKinhDoanh">Đăng Ký KD</a></li>
                            <li class="scroll-to-section"><a href="/Home/Guide">Hướng Dẫn</a></li>
                            <li class="scroll-to-section"><a href="#contact">Liên Hệ</a></li>
                            <li class="scroll-to-section">
                                <div class="main-red-button"><a href="/Services/DangKyDoanhNghiep">Đăng Ký Ngay</a></div>
                            </li>
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-lg-12 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.25s">
                    <p>© Copyright 2024 Cổng Thông Tin Doanh Nghiệp. All Rights Reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/owl-carousel.js"></script>
    <script src="~/assets/js/animation.js"></script>
    <script src="~/assets/js/imagesloaded.js"></script>
    <script src="~/assets/js/templatemo-custom.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
