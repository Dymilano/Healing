@model DoanhNghiepPortal.Models.BusinessLicenseModel
@{
    ViewData["Title"] = "Đăng Ký Kinh Doanh";
}

<div class="main-banner wow fadeIn" id="top" data-wow-duration="1s" data-wow-delay="0.5s">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-6 align-self-center">
                        <div class="left-content header-text wow fadeInLeft" data-wow-duration="1s" data-wow-delay="1s">
                            <h6>Đăng Ký Kinh Doanh</h6>
                            <h2>Đăng ký <em>Hộ kinh doanh</em> cá thể</h2>
                            <p>Đăng ký hộ kinh doanh cá thể, thay đổi thông tin kinh doanh, bổ sung ngành nghề. Quy trình đơn giản và nhanh chóng.</p>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="right-image wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.5s">
                            <img src="~/assets/images/banner-right-image.png" alt="Business License">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="contact-us section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading text-center">
                    <h2>Thông tin đăng ký kinh doanh</h2>
                    <p>Vui lòng điền đầy đủ thông tin bên dưới để đăng ký hộ kinh doanh</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form asp-action="DangKyKinhDoanh" method="post">
                    <div class="row">
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="BusinessName">Tên hộ kinh doanh *</label>
                                <input asp-for="BusinessName" type="text" placeholder="Nhập tên hộ kinh doanh" required>
                                <span asp-validation-for="BusinessName" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="OwnerName">Tên chủ hộ kinh doanh *</label>
                                <input asp-for="OwnerName" type="text" placeholder="Nhập tên chủ hộ kinh doanh" required>
                                <span asp-validation-for="OwnerName" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="IdNumber">Số CMND/CCCD *</label>
                                <input asp-for="IdNumber" type="text" placeholder="Nhập số CMND/CCCD" required>
                                <span asp-validation-for="IdNumber" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="BusinessAddress">Địa chỉ kinh doanh *</label>
                                <input asp-for="BusinessAddress" type="text" placeholder="Nhập địa chỉ kinh doanh" required>
                                <span asp-validation-for="BusinessAddress" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="BusinessLine">Ngành nghề kinh doanh *</label>
                                <select asp-for="BusinessLine" required>
                                    <option value="">Chọn ngành nghề</option>
                                    <option value="Thương mại">Thương mại</option>
                                    <option value="Dịch vụ">Dịch vụ</option>
                                    <option value="Sản xuất">Sản xuất</option>
                                    <option value="Nông nghiệp">Nông nghiệp</option>
                                    <option value="Thủ công mỹ nghệ">Thủ công mỹ nghệ</option>
                                    <option value="Khác">Khác</option>
                                </select>
                                <span asp-validation-for="BusinessLine" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="Capital">Vốn kinh doanh (VNĐ)</label>
                                <input asp-for="Capital" type="number" placeholder="Nhập vốn kinh doanh">
                                <span asp-validation-for="Capital" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="PhoneNumber">Số điện thoại *</label>
                                <input asp-for="PhoneNumber" type="tel" placeholder="Nhập số điện thoại" required>
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <label asp-for="Email">Email *</label>
                                <input asp-for="Email" type="email" placeholder="Nhập email" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <label asp-for="Notes">Ghi chú</label>
                                <textarea asp-for="Notes" placeholder="Ghi chú thêm (nếu có)"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <button type="submit" class="main-button">Gửi hồ sơ đăng ký</button>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .contact-us fieldset {
        margin-bottom: 20px;
    }
    
    .contact-us label {
        display: block;
        margin-bottom: 5px;
        font-weight: 500;
        color: #333;
    }
    
    .contact-us input,
    .contact-us select,
    .contact-us textarea {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 14px;
        transition: border-color 0.3s ease;
    }
    
    .contact-us input:focus,
    .contact-us select:focus,
    .contact-us textarea:focus {
        outline: none;
        border-color: #007bff;
        box-shadow: 0 0 0 2px rgba(0,123,255,0.25);
    }
    
    .contact-us textarea {
        height: 100px;
        resize: vertical;
    }
    
    .text-danger {
        color: #dc3545;
        font-size: 12px;
        margin-top: 5px;
        display: block;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 