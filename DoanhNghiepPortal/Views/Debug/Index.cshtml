@{
    ViewData["Title"] = "Debug Database Connection";
    var debugInfo = ViewBag.DebugInfo as Dictionary<string, object>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center mb-4">Debug Database Connection</h2>
            
            @if (debugInfo != null)
            {
                @if (debugInfo.ContainsKey("Error") && debugInfo["Error"] != null)
                {
                    <div class="alert alert-danger">
                        <h4>❌ Lỗi:</h4>
                        <p>@debugInfo["Error"]</p>
                        <details>
                            <summary>Chi tiết lỗi</summary>
                            <pre>@debugInfo["StackTrace"]</pre>
                        </details>
                    </div>
                }
                else
                {
                    <div class="alert alert-success">
                        <h4>✅ Kết nối thành công!</h4>
                        <p>Số bản ghi từ Service: @debugInfo["DataCount"]</p>
                        <p>Số bản ghi từ Stored Procedure: @debugInfo["SPDataCount"]</p>
                    </div>
                }

                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5>Thông tin kết nối</h5>
                            </div>
                            <div class="card-body">
                                <p><strong>Connection String:</strong></p>
                                <code class="small">@debugInfo["ConnectionString"]</code>
                                
                                @if (debugInfo.ContainsKey("ConnectionStatus"))
                                {
                                    <p><strong>Trạng thái:</strong> @debugInfo["ConnectionStatus"]</p>
                                }
                                
                                @if (debugInfo.ContainsKey("ServerVersion"))
                                {
                                    <p><strong>Server Version:</strong> @debugInfo["ServerVersion"]</p>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <h5>Thống kê dữ liệu</h5>
                            </div>
                            <div class="card-body">
                                <p><strong>Số bản ghi từ Service:</strong> @debugInfo["DataCount"]</p>
                                <p><strong>Số bản ghi từ Stored Procedure:</strong> @debugInfo["SPDataCount"]</p>
                            </div>
                        </div>
                    </div>
                </div>

                @if (debugInfo.ContainsKey("Data") && debugInfo["Data"] is List<DoanhNghiepPortal.Models.BusinessRegistrationOffice> data && data.Count > 0)
                {
                    <div class="card mt-3">
                        <div class="card-header">
                            <h5>Dữ liệu từ Database</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>STT</th>
                                            <th>Tỉnh/Thành phố</th>
                                            <th>Tên phòng</th>
                                            <th>Địa chỉ</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in data)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.STT</td>
                                                <td>@item.ProvinceCity</td>
                                                <td>@item.DepartmentName</td>
                                                <td>@item.Address</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            }

            <div class="mt-3">
                <button id="testDirectQuery" class="btn btn-primary">Test Query Trực tiếp</button>
                <a href="/BusinessRegistration" class="btn btn-secondary">Đi đến Business Registration</a>
            </div>

            <div id="testResult" class="mt-3"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#testDirectQuery').click(function() {
                $.get('/Debug/TestDirectQuery', function(data) {
                    let resultHtml = '';
                    if (data.success) {
                        resultHtml = `
                            <div class="alert alert-success">
                                <h5>✅ Query trực tiếp thành công!</h5>
                                <p>Số bản ghi: ${data.count}</p>
                                ${data.data && data.data.length > 0 ? 
                                    `<p>Bản ghi đầu tiên: ${data.data[0].provinceCity}</p>` : 
                                    '<p>Không có dữ liệu</p>'}
                            </div>
                        `;
                    } else {
                        resultHtml = `
                            <div class="alert alert-danger">
                                <h5>❌ Lỗi query trực tiếp</h5>
                                <p>${data.error}</p>
                                <details>
                                    <summary>Chi tiết lỗi</summary>
                                    <pre>${data.stackTrace}</pre>
                                </details>
                            </div>
                        `;
                    }
                    $('#testResult').html(resultHtml);
                });
            });
        });
    </script>
}
